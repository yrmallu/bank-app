%table.table.table-bordered
  %thead
    %tr
      %th Date of Transaction
      %th Transaction Type
      %th Recipient
      %th Amount
  %tbody
    - bank_account.transactions.each do |t|
      %tr
        %td #{t.created_at}
        %td #{t.transaction_type}
        %td #{t.recipient_id}
        %td #{number_to_currency(t.amount, unit: "₹")}
    %tr
      %th
      %th
      %th Balance
      %th #{number_to_currency(bank_account.balance, unit: "₹")}